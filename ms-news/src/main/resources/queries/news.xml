<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <comment>News Queries</comment>

    <entry key="news.query.create">
        <![CDATA[
            INSERT
              INTO news
            VALUES(NEWS_SEQ.nextval,
                  :header,
                  :body,
                  :type,
                  :lastModified,
                  :pictureKey)
        ]]>
    </entry>

    <entry key="news.query.lastAdded">
        <![CDATA[
            SELECT
               MAX(id)
              FROM news
        ]]>
    </entry>

    <entry key="news.query.findById">
        <![CDATA[
            SELECT *
              FROM news
             WHERE id=:id
        ]]>
    </entry>

    <entry key="news.query.findAll">
        <![CDATA[
            SELECT *
              FROM news {QUERY_FILTER_PART}
        ]]>
    </entry>

</properties>